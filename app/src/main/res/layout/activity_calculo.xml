<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gui.resultado"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:id="@+id/relative_principal"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/bottom_redondo">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resultado:"
            android:textSize="35sp"
            android:gravity="center"
            android:layout_alignParentTop="true"/>

        <LinearLayout
            android:id="@+id/linear_circular"
            android:layout_width="match_parent"
            android:layout_marginStart="30dp"
            android:layout_height="180dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/circulo"
            android:orientation="vertical">

            <TextView
                android:id="@+id/resultado_valor"
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:text=""
                android:gravity="center"
                android:textSize="40sp"
                android:textColor="@color/text_color_resultado"
                android:padding="5dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/resultado_status"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                android:gravity="center"
                android:textSize="25sp"
                android:textAlignment="center"
                android:textColor="@color/text_color"
                android:padding="7dp"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/resultado_mensagem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="17sp"
            android:textAlignment="center"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:layout_below="@+id/linear_circular"/>

    </RelativeLayout>

</LinearLayout>